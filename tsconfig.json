{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["/src/*"],
      "@components/": ["/src/components/*"],
      "@views/": ["/src/views/*"],
    }
  },
  "include": ["/src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
